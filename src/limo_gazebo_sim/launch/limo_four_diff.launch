<?xml version="1.0"?>
<launch>
    <arg name="robot_namespace" default="/"/>
    <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/Simple.world"/>
    <!-- <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/Simple_s.world"/> -->
    <!-- <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/sports.world"/> -->
     <!-- <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/Simple_2.world"/> -->
     <!-- <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/Simple_3.world"/> -->
     <!-- <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/deep.world"/> -->

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro '$(find limo_description)/urdf/limo_four_diff.xacro'
        robot_namespace:=$(arg robot_namespace)" />

    <!-- initial pose -->
    <!-- No obstacles -->
    <arg name="x" default="-2.5"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0"/>

    <!-- static obstacle -->
    <!-- <arg name="x" default="-0.7"/>
    <arg name="y" default="-1.3"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0.0"/> -->


    <!-- <arg name="x" default="-1"/>
    <arg name="y" default="5.7"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0"/> -->

    <!-- <arg name="x" default="-3"/>
    <arg name="y" default="7"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0"/> -->

    <node name="spawn_limo_model" pkg="gazebo_ros" type="spawn_model" args="-x $(arg x)
              -y $(arg y)
              -z $(arg z)
              -Y $(arg yaw)
              -unpause
              -urdf
              -param robot_description
              -model 'limo$(arg robot_namespace)'" />

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find limo_gazebo_sim)/config/limo_four_diff_control.yaml" command="load"/>
    <rosparam file="$(find limo_gazebo_sim)/config/boom.yaml" command="load"/>
    <rosparam file="$(find limo_gazebo_sim)/config/key.yaml" command="load"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner"
          respawn="false" output="screen" args="limo_state_controller "/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
        
    <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find limo_description)/rviz/model_display.rviz" /> -->
</launch>
